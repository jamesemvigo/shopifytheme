{% schema %}
{
  "name": "productimgvidslider",
  "settings": [],
 
  "presets": [
    {
      "name": "productimgvidslider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.slider-container {
  background-color: lightblue;
  max-width:600px;
  padding: 20px;
  position: relative;  /* Add this to allow child absolute positioning */
  overflow: hidden; /* Hide overflow content */
}

.autoplay {
  /* No special styles needed here since Slick will control the layout */
}

.slide img, .slide iframe, .slide video {
  max-width: 100%;
  height: auto;
  display: block; /* Remove default margins */
  margin: 0 auto; /* Center the image horizontally */
}


  .slider-container .single-item {
    width: 600px; /* Make sure the images fill the slider container */
    height: auto%; /* Maintain aspect ratio */
    padding: 10px;
  }
 
{% endstylesheet %}





{% javascript %}
 
$(document).ready(function(){
  $('.single-item').slick({
    autoplay: true,
    autoplaySpeed: 2000,
    arrows: true,
    dots: true,
  });
});


{% endjavascript %}


<div class="slider-container">
  <div class="autoplay single-item"> <!-- Add the single-item class here -->
    {% assign array_of_images = product.metafields.custom.productimageslider.value %}
    {% if array_of_images %}
      {% for product_image in array_of_images %}
        <div class="slide">
          <img src="{{ product_image | image_url }}">
        </div>
      {% endfor %}
    {% endif %}
    <!-- Slick will automatically add arrows, so you don't need these buttons -->
   
  </div>
</div>