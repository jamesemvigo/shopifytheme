{% schema %}
{
  "name": "productimgvidslider",
  "settings": [],
  "presets": [
    {
      "name": "productimgvidslider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* Add your custom CSS styles here */
.slider-container {
  background-color: lightblue; /* Add your desired background color */
  padding: 20px;
}

.autoplay {
  /* Add your custom styles for the autoplay container */
}

.slide img, .slide iframe {
  max-width: 100%;
  height: auto;
}
{% endstylesheet %}

{% javascript %}
/* Add your JavaScript code here */
{% endjavascript %}

<div class="slider-container">
  <div class="autoplay">
    {% assign media_items = product.metafields.custom.productimagevideoslider | split: ',' %}
    
    {% for media_item in media_items %}
      {% if media_item contains 'MediaImage' %}
        <div class="slide">
          <img src="{{ media_item | file_url }}" alt="Slide">
        </div>
      {% elsif media_item contains 'Video' %}
        <div class="slide">
          <iframe width="100%" height="auto" src="{{ media_item }}" frameborder="0" allowfullscreen></iframe>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
