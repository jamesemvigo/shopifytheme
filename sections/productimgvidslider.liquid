{% schema %}
{
  "name": "productimgvidslider",
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image",
          "info": "Upload an image for the slide."
        }
      ]
    },
    {
      "type": "video_block",
      "name": "Video Block",
      "settings": [
        {
          "type": "text",
          "label": "Video URL",
          "id": "video_url",
          "info": "Add a video URL for the slide."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "productimgvidslider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* Add your custom CSS styles here */
{% endstylesheet %}

{% javascript %}
/* Add your JavaScript code here */
{% endjavascript %}

<div class="slider-container">
  <div class="autoplay">
    {% for block in section.blocks %}
      {% if block.type == 'image_block' and block.settings.image %}
        <div class="slide">
          <img src="{{ block.settings.image | img_url: '1600x800' }}" alt="Slide">
        </div>
      {% elsif block.type == 'video_block' and block.settings.video_url %}
        <div class="slide">
          <iframe width="100%" height="auto" src="{{ block.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
