{% schema %}
{
  "name": "productimgvidslider",
  "settings": [],
  "presets": [
    {
      "name": "productimgvidslider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* Add your custom CSS styles here */
.slider-container {
  background-color: lightblue; /* Add your desired background color */
  padding: 20px;
}

.autoplay {
  /* Add your custom styles for the autoplay container */
}

.slide {
  /* Add your custom styles for individual slides */
}

.slide img, .slide iframe, .slide video {
  max-width: 100%;
  height: auto;
}
{% endstylesheet %}

{% javascript %}
/* Add your JavaScript code here */
{% endjavascript %}

<div class="slider-container">
  <div class="autoplay">
{% assign array_of_badges = product.metafields.custom.productimageslider.value %}
{% if array_of_badges %}
 {% for product_badge in array_of_badges %}
  <img src="{{ product_badge | image_url }}">
 {% endfor %}
{% endif %}

  </div>
</div>
