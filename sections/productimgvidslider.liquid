{% schema %}
{
  "name": "productimgvidslider",
  "settings": [],
  "presets": [
    {
      "name": "productimgvidslider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/* Add your custom CSS styles here */
.slider-container {
  background-color: lightblue; /* Add your desired background color */
  padding: 20px;
}

.autoplay {
  /* Add your custom styles for the autoplay container */
}

.slide {
  /* Add your custom styles for individual slides */
  max-width: 100%;
  height: auto;
}
{% endstylesheet %}

{% javascript %}
/* Add your JavaScript code here */
{% endjavascript %}

<div class="slider-container">
  <div class="autoplay">
    <p>Testing productimgvidslider section</p>
    {% assign media_items = product.metafields.custom.productimagevideoslider %}
    
    {% assign shuffled_media_items = media_items | shuffle %}
    
    {% for media_item in shuffled_media_items limit: 10 %}
      {% if media_item contains 'MediaImage' %}
        <div class="slide">
          <img src="{{ 'https://cdn.shopify.com/' | append: media_item }}" alt="Slide">
        </div>
      {% elsif media_item contains 'Video' %}
        <div class="slide">
          <iframe width="100%" height="auto" src="{{ 'https://cdn.shopify.com/' | append: media_item }}" frameborder="0" allowfullscreen></iframe>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
