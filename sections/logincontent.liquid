{% schema %}
  {
    "name": "content",
    "presets": [
      {
        "name": "LoginContent",
        "category": "Custom"
      }
    ],
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "welcome_message",
        "label": "Welcome Message",
        "default": "Welcome to our page!"
      }
    ]
  }
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (document.cookie.indexOf('access=true') === -1) {
      window.location.href = 'https://moment-pro-india.myshopify.com/pages/password-page';
    } else {
      document.getElementById('content-image').style.display = 'block';
      document.getElementById('welcome-message').style.display = 'block';
    }
  });
</script>

<img id="content-image" src="{{ section.settings.image | img_url: 'master' }}" alt="Content Image" style="display: none;">
<p id="welcome-message" style="display: none;">{{ section.settings.welcome_message }}</p>
