{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video section"
    }
  ],
  "presets": [
    {
      "name": "External Video"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  
   .section-homepage-video{
    
    max-width: 100%; 
    margin: 0 auto; 
    margin-top: 50px;
    margin-left: 100px;
  }
  
  .video-homepage{
      width: 100%;
      height: auto;
  }
{% endstylesheet %}

<div class="section-homepage-video">
  
    <video autoplay muted loop playsinline class="video-homepage">
         <source src="{{ section.settings.video | video_tag }}">
    </video>
  <div class="video-section">
  <h2>{{ section.settings.heading }}</h2>
</div>


</div>

