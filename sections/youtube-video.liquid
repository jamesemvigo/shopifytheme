{% schema %}
{
  "name": "YouTube Video",
  "settings": [
    {
      "type": "text",
      "label": "YouTube Video Link",
      "id": "youtube_link",
      "info": "Enter the YouTube video link (e.g., https://www.youtube.com/watch?v=VIDEO_ID)."
    }
  ],
  "presets": [
    {
      "name": "YouTube Video",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
/ You can add custom CSS styles for your YouTube video here if needed /
{% endstylesheet %}

{% javascript %}
/ You can add custom JavaScript code for your YouTube video here if needed /
{% endjavascript %}

<div class="youtube-video">
  <div class="video-container">
    {% if section.settings.youtube_link %}
      <iframe
        width="560"
        height="315"
        src="{{ section.settings.youtube_link | replace: 'watch?v=', 'embed/' }}"
        frameborder="0"
        allowfullscreen
      ></iframe>
    {% else %}
      <p>No YouTube video link provided.</p>
    {% endif %}
  </div>
</div>
